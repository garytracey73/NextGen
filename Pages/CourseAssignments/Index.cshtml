@page
@model NextGenTraining.Pages.CourseAssignments.IndexModel
@{
    ViewData["Title"] = "Course Assignments";
}
<h2>Course Assignments</h2>

<table id="course-assignments-table" class="table">
    <thead>
        <tr>
            <th>
                Couse Name
            </th>
            <th>
                Progress
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CourseAssignments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    <button type="button" class="btn btn-primary">
                        Launch Course
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(function () {
            $("#course-assignments-table").DataTable();
        });
    </script>
}

